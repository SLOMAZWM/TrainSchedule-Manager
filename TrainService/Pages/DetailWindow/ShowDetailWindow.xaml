<Window x:Class="ProjektLAB.TrainService.Pages.DetailWindow.ShowDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektLAB.TrainService.Pages.DetailWindow"
                         xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"

        mc:Ignorable="d"

        Title="ShowDetailWindow" Height="650" Width="1000" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Border Background="Gray" MouseDown="Border_MouseDown" BorderBrush="Black" BorderThickness="1" CornerRadius="20">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Grid.Row="0">
                <Button Style="{StaticResource topButton}" Click="ExitBtn_Click">
                    <Icon:PackIconMaterial Kind="LocationExit"/>
                </Button>
            </StackPanel>

            <Label Style="{StaticResource TopLabel}" Content="Szczegóły Trasy" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Margin="5,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextInput}" Text="Przystanek początkowy: " Width="175"/>
                    <TextBlock x:Name="FirstStationNameTextBlock" Style="{StaticResource TextInput}" Text="Nazwa przystanku" Foreground="White" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextInput}" Text="Przystanek końcowy: " Width="175"/>
                    <TextBlock x:Name="LastStationNameTextBlock" Style="{StaticResource TextInput}" Text="Nazwa przystanku" Foreground="White" Width="200"/>
                </StackPanel>
             
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="110,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextInput}" Text="Czas początkowy: " Width="175"/>
                    <TextBlock x:Name="StartTimeTextBlock" Style="{StaticResource TextInput}" Text="czas" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextInput}" Text="Czas zakończenia: " Width="175"/>
                    <TextBlock x:Name="EndTimeTextBlock" Style="{StaticResource TextInput}" Text="czas" Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="650,5,20,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextInput}" Text="Przesiadki: " Width="225"/>
                    <TextBlock x:Name="Carrier" Style="{StaticResource TextInput}" Text="Brak" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextInput}" Text="Szczegóły pociągu: " Width="175"/>
                    <Button Style="{StaticResource NavigationButton}" Margin="5,15,0,0" Click="ShowTrainDetailsBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="CarSeat" Margin="0,8,2,0"/>
                            <Label Style="{StaticResource LabelButton}" Content="Wyświetł"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <Frame x:Name="ContentDetailFrame" Grid.Row="2" NavigationUIVisibility="Hidden" Margin="0,20,0,20"/>

        </Grid>
    </Border>
</Window>

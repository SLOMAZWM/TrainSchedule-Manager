<Page x:Class="ProjektLAB.TrainService.Pages.DetailWindow.ShowTrainDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektLAB.TrainService.Pages.DetailWindow"
                                   xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"

    mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
Title="HomePage">

    <Border Background="Gray" CornerRadius="20" >

        <Grid>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Grid.Row="0">
                <Button Style="{StaticResource topButton}" Click="ExitBtn_Click">
                    <Icon:PackIconMaterial Kind="ArrowBottomLeft"/>
                </Button>
            </StackPanel>

        </Grid>

    </Border>
</Page>
